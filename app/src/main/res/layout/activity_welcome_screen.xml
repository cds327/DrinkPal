<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_welcome_screen">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="DrinkPal Drink Information"
        android:textAllCaps="true"
        android:paddingTop="75sp"
        android:textSize="20sp"
        android:paddingLeft="50sp"
        android:layout_gravity="center"
        android:textColor="@color/icons"
        android:background="@color/primary"
        android:paddingBottom="100sp"
        android:layout_marginBottom="25sp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7sp"
        android:text="Search Drinks"
        android:background="@color/accent"
        android:id="@+id/searchDrinks"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent"
        android:layout_marginBottom="7sp"
        android:text="Common Drinks"
        android:id="@+id/commonDrinks"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent"
        android:layout_marginBottom="7sp"
        android:text="Manage Favorites"
        android:id="@+id/favs"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent"
        android:text="Options"
        android:id="@+id/options"
        android:layout_marginBottom="7sp"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7sp"
        android:background="@color/accent"
        android:text="About Us"
        android:id="@+id/aboutUS"
        android:layout_gravity="center"/>

</LinearLayout>